FROM nvidia/cuda:11.4.1-cudnn8-runtime-ubuntu20.04
USER root
COPY ./Dockerfile/requirements_gpunode.txt ./requirements.txt
RUN apt-get update
RUN apt-get install -y build-essential python3.8 python3-pip net-tools git

RUN git clone https://github.com/wt358/MLops.git
RUN mv ./MLops/src/*.py ./
# install your pip package
RUN pip install -r requirements.txt
